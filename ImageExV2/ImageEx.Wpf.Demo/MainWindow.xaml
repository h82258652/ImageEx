<Window x:Class="ImageEx.Wpf.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Controls;assembly=ImageEx.Wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ImageEx.Wpf.Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    Orientation="Vertical">
            <controls:ImageEx Width="100"
                              Height="100"
                              Source="test.jpg" />
            <controls:ImageEx Width="100"
                              Height="100"
                              Source="https://ss0.bdstatic.com/5aV1bjqh_Q23odCf/static/superman/img/logo/bd_logo1_31bdc765.png" />
            <controls:ImageEx Width="100"
                              Height="100"
                              Source="test.jpg" />
            <Image x:Name="Image"
                   Width="100"
                   Height="100"></Image>
            <Button Content="Test"
                    Click="ButtonBase_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>